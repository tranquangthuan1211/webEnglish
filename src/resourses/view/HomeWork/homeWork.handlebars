<div class='content_post'>
    {{#if upload}}
        <div class='alert'>
            <h1 style='text-align: center;'>Thank You</h1>
            <p style='text-align: center;'>you details has been successfully submits.Thank</p>
            <button class='ok btn'>Ok</button>
        </div>
    {{/if}}
    <div class='content_course'>
        <div class='header_course'>

            <div class='logo-app'>
                <img class='logo-app-image' src='/image/logo.png' />
            </div>
            <div class='user'>
                <div class='user-content'>
                    {{#each users}}
                        <p class='name'>
                            {{this.latsName}}
                            {{this.firstName}}
                        </p>
                    {{/each}}
                </div>
                <div class='user-icon'>

                    <P><i class='fas fa-home'></i></P>
                    <p><i class='fas fa-bell'></i></p>
                    <p><i class='fas fa-cog setting'></i></p>
                </div>

                <div class='content_setting_none'>
                    <div class='btn_logout'>
                        <a href='/' class='link_logout'>Log out</a>
                    </div>
                    <div class='btn_pass'>
                        <a href='/change-pass-word' class='link_changePass'>change pass</a>
                    </div>
                </div>
            </div>
        </div>

        <div class='sizebar'>
            <div class='btn sizebar-home home'>
                <button><a href='/user/home'>Home</a></button>

            </div>
            <div class='btn courses'>
                <button class='courses-btn'><a href='/post/home-work'>Post Homework</a></button>
            </div>
            <div class='btn skills'>
                <button class='skills-btn'><a href='/post/document'>Post Documents</a></button>
            </div>
            <div class='btn grammar'>
                <button class='gammar-btn'><a href='/add'>Add Students</a></button>
            </div>
            <div class='btn vocabulary'>
                <button class='vocabulary-btn'><a href='/advice'>advice</a></button>
            </div>
            <div class='btn vocabulary'>
                <button class='vocabulary-btn'><a href='/post/schedule'>Schedule</a></button>
            </div>
        </div>
    </div>
    <div class='post_home_work'>
        <h1 style='text-align: center;'>POST HOME WORK</h1>
        <form method='POST' action='/post/home-work'>
            <div class='form-group row'>
                <div class='col-sm-10'>
                    <input type='text' class='form-control' id='inputPassword' placeholder='Title' name='title' />
                </div>
            </div>
            <div class='form-group row'>
                <div class='col-sm-10'>
                    <input
                        type='text'
                        placeholder='Link home Work'
                        class='form-control-plaintext'
                        id='staticEmail'
                        name='link'
                    />
                </div>
            </div>
            <div class='form-group row'>
                <div class='col-sm-10'>
                    <input
                        type='text'
                        placeholder='Link submit homework'
                        class='form-control-plaintext'
                        id='staticEmail'
                        name='linkHomeWork'
                    />
                </div>
            </div>
            <button style='color: #fff; font-size: 1,2rem;' type='submit' class='submit btn btn-primary'>Submit</button>
        </form>
    </div>
</div>