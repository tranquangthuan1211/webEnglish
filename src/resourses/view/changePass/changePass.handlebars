<form class='login' method='POST' action='/change-pass-word?_method=PUT'>
    <div class='login-form'>
        <div class='login-header'>
            <img class='logo' src='/image/logo.png' />
        </div>
        <div class='login-input'>
            <div class='form-group input-name'>
                <input type='password' class='form-control' id='email' placeholder='current password' />
            </div>
            <div class='form-group input-pass'>
                <input type='password' class='form-control' id='pass' placeholder='new password' />
            </div>
            <div class='form-group input-pass'>
                <input type='password' class='form-control' id='pass' placeholder='Enter the password' name='pass' />
            </div>
            <div class='button'>
                <button type='submit' class='button-sign_in'>Submit</button>
            </div>
        </div>
    </div>
</form>