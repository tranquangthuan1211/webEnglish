<form class='login' method='POST' action="/">
    <div class='login-form'>        
        <div class='login-header'>
            <img class='logo' src='/image/logo.png' />
        </div>
        <div class='login-input'>
            <div class='form-group input-name'>
                <input type='email' class='form-control' id='email' placeholder='email@example.com' name='email'
                    {{#if value}}
                        value={{value}}
                    {{/if}}
                />
            </div>
            <div class='form-group input-pass'>
                <input type='password' class='form-control' id='pass' placeholder='Password' name='pass' 
                    {{#if value}}
                        value={{value}}
                    {{/if}}
                />
            </div>
            {{#if errors}}
                <div class="warning" role="alert">
                        {{#each errors}}
                                {{this}}
                        {{/each}}
                </div>
            {{/if}}
            <div class='form-check'>
                <input type='checkbox' class='form-check-input' id='dropdownCheck2' />
                <label class='form-check-label' for='dropdownCheck2'>
                    Remember me
                </label>
            </div>
            <div class='button'>
                <button type='submit' class='button-sign_in'>Sign in</button>
                <button type='submit' class='button-register'><a href='register'>Register</a></button>
            </div>
        </div>
    </div>
</form>