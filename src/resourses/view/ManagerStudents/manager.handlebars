<div class='manger_students'>
    <div class='content_course'>
        <div class='header_course'>

            <div class='logo-app'>
                <img class='logo-app-image' src='/image/logo.png' />
            </div>
            <div class='user'>
                <div class='user-content'>
                    {{#each users}}
                        <p class='name'>
                            {{this.latsName}}
                            {{this.firstName}}
                        </p>
                    {{/each}}
                </div>
                <div class='user-icon'>

                    <P><i class='fas fa-home'></i></P>
                    <p><i class='fas fa-bell'></i></p>
                    <p><i class='fas fa-cog setting'></i></p>
                </div>

                <div class='content_setting_none'>
                    <div class='btn_logout'>
                        <a href='/' class='link_logout'>Log out</a>
                    </div>
                    <div class='btn_pass'>
                        <a href='/change-pass-word' class='link_changePass'>change pass</a>
                    </div>
                </div>
            </div>
        </div>

        <div class='sizebar'>
            <div class='btn sizebar-home home'>
                <button><a href='/user/home'>Home</a></button>

            </div>
            <div class='btn courses'>
                <button class='courses-btn'><a href='/post/home-work'>post homework</a></button>
            </div>
            <div class='btn skills'>
                <button class='skills-btn'><a href='/post/document'>post documents</a></button>
            </div>
            <div class='btn grammar'>
                <button class='gammar-btn'><a href='/mark'>Mark</a></button>
            </div>
            <div class='btn vocabulary'>
                <button class='vocabulary-btn'><a href='/advice'>advice</a></button>
            </div>
        </div>
    </div>
    <div class='student_management'>
        <h1 class='name_student'>{{slug}}</h1>
        <form class='form-score' method='POST' action='/student/{{slug}}?_method=PUT'>
            <div class='form-group'>
                <label for='exampleInputEmail1'> EDIT SCORES</label>
                <input
                    type='text'
                    class='form-control'
                    id='exampleInputEmail1'
                    aria-describedby='emailHelp'
                    placeholder='Score'
                    name='score'
                />
            </div>
            <div class='form-group'>
                <label for='exampleInputPassword1'>UPDATE EVALUATE</label>
                <input
                    type='text'
                    class='form-control'
                    id='exampleInputPassword1'
                    placeholder='Evaluate'
                    name='evaluate'
                />
            </div>
            <button type='submit' class='btn btn-primary btn-update-score'>Update</button>
        </form>
    </div>
</div>